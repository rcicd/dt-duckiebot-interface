<launch>
    <let name="veh" value="$(env VEH '')"/>
    <let name="pkg_name" value="display_driver"/>
    <let name="node_name" value="display_driver_node"/>
    <arg name="required" default="false"/>
    <arg name="param_file_name" value="$(env PARAM_FILE_NAME 'default')"/>

    <group>
        <remap from="display_driver_node/button" to="button_driver_node/event"/>
        <push_ros_namespace namespace="$(var veh)"/>
        <node pkg="$(var pkg_name)" name="$(var node_name)" exec="$(var node_name).py"
              output="screen" required="$(var required)">
            <param name="veh" value="$(var veh)" />
            <param from="$(find-pkg-share display_driver)/config/$(var node_name)/$(var param_file_name).yaml"/>
        </node>
    </group>
</launch>
