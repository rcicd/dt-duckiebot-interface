<launch>
    <let name="veh" value="$(env VEH '')"/>
<!--     <arg name="name" description="Specify a sensor name, ex: `front_center`"/> -->
    <let name="name" value="$(env NAME '')"/>

    <let name="pkg_name" value="tof_driver"/>
    <let name="node_name" value="tof_node"/>
    <arg name="required" default="false"/>

    <group>
        <remap from="front_center_tof_driver_node/fragments" to="display_driver_node/fragments"/>
        <push_ros_namespace namespace="$(var veh)"/>
        <node pkg="$(var pkg_name)" name="$(var name)_tof_driver_node" exec="$(var node_name).py"
              output="screen" required="$(var required)">
            <param name="veh" value="$(var veh)" />
            <param from="$(find-pkg-share tof_driver)/config/$(var node_name)/$(var name).yaml"/>
        </node>
    </group>
</launch>
