<launch>
    <arg name="veh" description="Specify a vehicle name"/>
    <arg name="name" description="Specify a sensor name, ex: `front_center`"/>

    <arg name="pkg_name"/>
    <let name="pkg_name" value="tof_driver"/>
    <arg name="node_name"/>
    <let name="node_name" value="tof_node"/>
    <arg name="required" default="false"/>

    <group>
        <push_ros_namespace namespace="$(arg veh)"/>
        <node pkg="$(arg pkg_name)" name="$(arg name)_tof_driver_node" exec="$(arg node_name).py"
              output="screen" required="$(arg required)">
            <param name="veh" value="$(arg veh)" />
            <param from="$(find tof_driver)/config/$(arg node_name)/$(arg name).yaml"/>
        </node>
    </group>
</launch>
