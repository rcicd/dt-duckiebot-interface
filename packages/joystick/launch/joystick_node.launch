<launch>
	<arg name="veh" description="Name of vehicle. ex: megaman"/>
	<arg name="node_name" default="joy_node"/>
	<arg name="param_file_name" default="default" description="Specify a param file. ex:megaman"/>

	<!-- This launches a node in /opt/ros/ROS_DISTRO/share/joy -->
	<node namespace="$(arg veh)" pkg="joy" exec="$(arg node_name)" name="$(arg node_name)" output="screen" required="true">
		<param from="$(find joystick)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
	</node>
</launch>
