<?xml version="1.0"?>
<launch>
    <arg name="veh" description="Name of vehicle. ex: megaman"/>
    <arg name="node_name" default="robot_http_api_node"/>
    <arg name="param_file_name" default="default" description="Specify a param file. ex:megaman." />
    <arg name="robot_type" description="The type of the robot, e.g., duckiebot, watchtower, traffic_light, ..."/>

    <group>
        <push_ros_namespace namespace="$(arg veh)"/>
        <node pkg="robot_http_api" exec="$(arg node_name).py" name="$(arg node_name)" output="screen" required="true">
            <remap if="$(eval robot_type == 'duckiebot')" from="robot_http_api_node/estop" to="wheels_driver_node/emergency_stop"/>
            <remap if="$(eval robot_type == 'duckiebot')" from="robot_http_api_node/wheels_cmd" to="wheels_driver_node/wheels_cmd"/>
            <remap if="$(eval robot_type == 'duckiebot')" from="robot_http_api_node/shutdown_behavior" to="button_driver_node/shutdown_behavior"/>
        </node>
    </group>
</launch>
