<launch>
    <arg name="veh" description="Specify a vehicle name"/>

    <arg name="pkg_name"/>
    <let name="pkg_name" value="display_renderers"/>
    <arg name="node_name"/>
    <let name="node_name" value="robot_info_renderer_node"/>
    <arg name="required" default="false"/>
    <arg name="param_file_name" default="default" description="Specify a param file. ex:megaman"/>

    <group>
        <push_ros_namespace namespace="$(arg veh)"/>
        <node pkg="$(arg pkg_name)" name="$(arg node_name)" exec="$(arg node_name).py"
              output="screen" required="$(arg required)">
            <remap from="$(arg node_name)/fragments" to="display_driver_node/fragments"/>
            <param name="veh" value="$(arg veh)" />
        </node>
    </group>
</launch>
