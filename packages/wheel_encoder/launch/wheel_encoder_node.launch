<launch>
    <arg name="veh" description="Name of vehicle. ex: megaman"/>
    <arg name="wheel" description="Unique name of the wheel (e.g., left)"/>
    <arg name="node_name" default="wheel_encoder_node"/>
    <arg name="param_file_name" default="default" description="Specify a param file. ex:megaman." />

    <group>
        <push_ros_namespace namespace="$(arg veh)"/>
        <node pkg="wheel_encoder" exec="$(arg node_name).py"
              name="$(arg wheel)_$(arg node_name)" output="screen" required="true">
            <param name="veh" value="$(arg veh)"/>
            <param name="name" value="$(arg wheel)"/>
            <param from="$(find wheel_encoder)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
        </node>
    </group>
</launch>
