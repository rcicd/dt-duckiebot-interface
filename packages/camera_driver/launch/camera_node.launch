<launch>
  <arg name="veh"/>
  <arg name="pkg_name"/>
  <let name="pkg_name" value="camera_driver"/>
  <arg name="node_name" default="$(env ROBOT_HARDWARE)_camera_node"/>
  <arg name="param_file_name" default="duckiebot" description="Specify a param file. ex:megaman"/>
  <arg name="required" default="false" />

  <group>
    <push_ros_namespace namespace="$(arg veh)"/>
    <node name="camera_node" pkg="$(arg pkg_name)" exec="$(arg node_name).py" respawn="true" output="screen" required="$(arg required)">
      <param from="$(find camera_driver)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
    </node>
  </group>
</launch>
