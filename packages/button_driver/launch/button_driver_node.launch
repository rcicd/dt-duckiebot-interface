<launch>
  <let name="veh" value="$(env VEH '')"/>
  <let name="pkg_name" value="button_driver"/>
  <let name="node_name" value="button_driver_node"/>
  <arg name="required" default="false"/>
  <arg name="param_file_name" default="default" description="Specify a param file. ex:megaman"/>

  <group>
    <push_ros_namespace namespace="$(var veh)"/>
    <node pkg="$(var pkg_name)" name="$(var node_name)" exec="$(var node_name).py" output="screen">
<!--            required="$(var required)"> -->
        <remap from="button_driver_node/fragments" to="display_driver_node/fragments"/>
        <param name="veh" value="$(var veh)" />
        <param from="$(find-pkg-share button_driver)/config/$(var node_name)/$(var param_file_name).yaml"/>
    </node>
  </group>
</launch>
